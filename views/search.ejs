        margin-bottom: 15px;
    }
    
    .recipe-meta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        font-size: 14px;
    }
    
    .meta-tag {
        background: white;
        padding: 4px 10px;
        border-radius: 6px;
        color: #667eea;
    }
    
    .no-results {
        text-align: center;
        padding: 40px;
        color: #999;
    }
    
    .loading {
        text-align: center;
